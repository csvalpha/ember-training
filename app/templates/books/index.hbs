<SearchInput
  class="mb-3"
  @placeholder="Title"
  @value={{title}}
  @onChange={{action (mut title)}}
/>

<div class="list-group">
  {{#each model as |book|}}
    {{#link-to "books.book" book class="list-group-item"}}{{book.title}}{{/link-to}}
  {{else}}
    <div class="list-group-item text-muted"><i>No books found</i></div>
  {{/each}}
</div>